generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String
  password      String
  emailVerified Boolean   @default(false)
  image         String?
  occupation    String?
  aiInstructions String?
  bio           String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  chats         Chat[]
  usage         UserUsage?
  emailCampaignLogs EmailCampaignLog[]

  stripeCustomerId String?

  @@unique([email])
  @@map("user")
}

model EmailOtp {
  id         String   @id @default(cuid())
  email      String
  otpHash    String
  expiresAt  DateTime
  consumedAt DateTime?
  attempts   Int      @default(0)
  createdAt  DateTime @default(now())

  @@index([email])
  @@index([expiresAt])
  @@map("email_otp")
}

model EmailCampaignLog {
  id          String   @id @default(cuid())
  userId      String
  campaignKey String
  sentAt      DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, campaignKey])
  @@index([campaignKey])
  @@map("email_campaign_log")
}

model Chat {
  id        String    @id @default(cuid())
  title     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  pinnedAt  DateTime?
  archivedAt DateTime?
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  Message[]
  activeBranchId String?
  activeBranch   ChatBranch? @relation("ActiveChatBranch", fields: [activeBranchId], references: [id], onDelete: SetNull)
  branches  ChatBranch[]
  isPublic  Boolean   @default(false)
  sharePath String?   @unique
  model     String?

  @@index([userId])
  @@map("chats")
}

model ChatBranch {
  id             String   @id @default(cuid())
  chatId         String
  chat           Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  parentBranchId String?
  parentBranch   ChatBranch? @relation("ChatBranchParent", fields: [parentBranchId], references: [id], onDelete: SetNull)
  childBranches  ChatBranch[] @relation("ChatBranchParent")
  forkMessageId  String?
  forkVersionId  String?
  createdAt      DateTime @default(now())
  items          ChatBranchMessage[]
  activeForChats Chat[]   @relation("ActiveChatBranch")

  @@index([chatId])
  @@index([parentBranchId])
  @@index([forkMessageId])
  @@map("chat_branches")
}

model ChatBranchMessage {
  id              String   @id @default(cuid())
  branchId        String
  branch          ChatBranch @relation(fields: [branchId], references: [id], onDelete: Cascade)
  messageId       String
  message         Message   @relation(fields: [messageId], references: [id], onDelete: Cascade)
  position        Int
  messageVersionId String?
  messageVersion  MessageVersion? @relation(fields: [messageVersionId], references: [id], onDelete: SetNull)
  createdAt       DateTime @default(now())

  @@unique([branchId, position])
  @@index([branchId])
  @@index([messageId])
  @@index([messageVersionId])
  @@map("chat_branch_messages")
}

model Message {
  id        String           @id @default(cuid())
  role      String
  content   Json
  createdAt DateTime         @default(now())
  chatId    String
  chat      Chat             @relation(fields: [chatId], references: [id], onDelete: Cascade)
  versions  MessageVersion[]
  branchItems ChatBranchMessage[]

  @@map("messages")
}

model MessageVersion {
  id        String   @id @default(cuid())
  content   Json
  createdAt DateTime @default(now())
  messageId String
  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  branchItems ChatBranchMessage[]

  @@index([messageId])
  @@map("message_versions")
}

model Subscription {
  id                   String    @id
  plan                 String
  referenceId          String
  stripeCustomerId     String?
  stripeSubscriptionId String?
  status               String?
  periodStart          DateTime?
  periodEnd            DateTime?
  cancelAtPeriodEnd    Boolean?
  seats                Int?

  @@map("subscription")
}

model UserUsage {
  userId           String  @id
  dayCount         Int     @default(0)
  dayWindowStart   DateTime
  weekCount        Int     @default(0)
  weekWindowStart  DateTime
  monthCount       Int     @default(0)
  monthWindowStart DateTime
  user             User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_usage")
}
